<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="User\Domain\Model\User" table="user">
        <embedded name="id" class="UserId" use-column-prefix="false"/>
        <embedded name="username" class="Username" use-column-prefix="false"/>
        <embedded name="roles" class="UserRoles" use-column-prefix="false"/>
        <field name="password" length="250"/>
    </entity>
</doctrine-mapping>
